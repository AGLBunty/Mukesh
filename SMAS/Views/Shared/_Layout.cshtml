<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - Maruti-DTSMP</title>
	@*@Styles.Render("~/Content/css")*@
	@Scripts.Render("~/bundles/modernizr")
	<link rel="stylesheet" href=@Url.Content("~/css/bootstrap.css") />
	<link rel="stylesheet" href=@Url.Content("~/css/style.css") />


</head>
<body>
	<div>
		<div class="mainContainer">
			@if (Request.IsAuthenticated)
            {
                if(HttpContext.Current.User.Identity.Name.ToLower() == "admin")
                {
				<div class="leftPanel float-left">
					<div class="logo"><img src=@Url.Content("~/images/logo.png")></div>
					<div class="leftLinks">
						<ul>
							<li class="home"><a href="@Url.Action("Index", "Admin")">Home</a></li>
							<li class="models"><a href="#">Feedback</a></li>
							<li class="language"><a href="#">FAQs</a></li>
							<li class="sepLine"></li>
							<li class="uploadManual"><a href="@Url.Action("Modeldetails", "Admin", new {chk="y" })">Upload Manual</a></li>
							<li class="downloadReports"><a href="@Url.Action("usagereport", "Admin")">Download Reports</a></li>
                            <li class="sepLine"></li>
                            <li class="users">
                                @using (Html.BeginForm("Logout", "Home", FormMethod.Post, new { id = "logoutForm" }))
                                {
                                    <a href="javascript:document.getElementById('logoutForm').submit()">Logout</a>
                                }

                            </li>
						</ul>
					</div>
					<div class="leftPanelArrow"><a href="#">&nbsp;</a></div>
				</div>
                }
                else
                {
                    <div class="leftPanel float-left">
                        <div class="logo"><img src=@Url.Content("~/images/logo.png")></div>
                        <div class="leftLinks">
                            <ul>
                                <li class="home"><a href="@Url.Action("Index", "dealer")">Home</a></li>
                                <li class="models"><a href="@Url.Action("Feedback", "dealer")">Feedback</a></li>
                                <li class="language"><a href="#">FAQs</a></li>
                                <li class="sepLine"></li>
                                <li class="users">
                                    @using (Html.BeginForm("Logout", "Home", FormMethod.Post, new { id = "logoutForm" }))
                                    {
                                        <a href="javascript:document.getElementById('logoutForm').submit()">Logout</a>
                                    }

                                </li>
                            </ul>
                        </div>
                        <div class="leftPanelArrow"><a href="#">&nbsp;</a></div>
                    </div>
                }
            }
			<div>
				@RenderBody()
			</div>
		</div>
	</div>


	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
